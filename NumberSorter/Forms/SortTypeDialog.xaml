<Window x:Class="NumberSorter.Forms.SortTypeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NumberSorter.Forms"
        mc:Ignorable="d"
        Title="SortTypeDialog" Height="450" Width="400">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Accept" Width="80" Margin="5"/>
            <Button Content="Cancel" Width="80" Margin="5"/>
        </StackPanel>
        <ListBox x:Name="SortTypeList" HorizontalContentAlignment="Stretch"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" />
    </DockPanel>
</Window>
