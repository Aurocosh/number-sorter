<reactiveui:ReactiveWindow
        x:TypeArguments="viewmodel:MainWindowViewModel"
        x:Class="NumberSorter.Forms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:reactiveui="http://reactiveui.net"
        xmlns:viewmodel="clr-namespace:NumberSorter.ViewModels"
        xmlns:local="clr-namespace:NumberSorter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel d:DataContext="{d:DesignInstance viewmodel:MainWindowViewModel}">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Исходные данные">
                <MenuItem Header="Загрузить из файла" Name="LoadFromFileButton"/>
                <MenuItem Header="Сгенерировать" Name="GenerateButton"/>
            </MenuItem>
            <MenuItem Header="Сортировка">
                <MenuItem Header="Отсортировать" Name="SortButton"/>
            </MenuItem>
        </Menu>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="Исходные данные"/>
            <Label Grid.Row="0" Grid.Column="1" Content="Отсортированные данные"/>
            <TextBox Grid.Row="1" Grid.Column="0" Name="InputTextBox" Margin="5" VerticalAlignment="Stretch" AcceptsReturn="True" TextWrapping="Wrap" IsReadOnly="True"/>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="OutputTextBox" Margin="5" VerticalAlignment="Stretch" AcceptsReturn="True" TextWrapping="Wrap" IsReadOnly="True"/>
        </Grid>
    </DockPanel>
</reactiveui:ReactiveWindow>
